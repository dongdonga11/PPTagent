{
  "manifest_version": 3,
  "name": "AI 全媒体发布助手",
  "version": "1.0.0",
  "description": "AI 驱动的跨平台内容发布工具，自动识别页面元素并填充内容",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "*://mp.weixin.qq.com/*",
    "*://zhuanlan.zhihu.com/*",
    "*://www.zhihu.com/*",
    "*://creator.xiaohongshu.com/*",
    "*://mp.toutiao.com/*"
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "https://localhost:*/*"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://mp.weixin.qq.com/*",
        "*://zhuanlan.zhihu.com/*",
        "*://www.zhihu.com/*",
        "*://creator.xiaohongshu.com/*",
        "*://mp.toutiao.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  }
}
